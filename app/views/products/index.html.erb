<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:ups) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th>Categories</th>
  
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
      
        <td><%= product.name %></td>
        <td><%= product.company %></td>
        <td><%= product.website %></td>
        <td><%= product.ups %></td>
        <td><%= number_to_currency(product.price)%></td>
        <td><%= link_to("#{product.categories.count} Categories", product_categories_path(product))%></td>
          <!--            <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini btn-primay' %> 
     <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => ' btn btn-mini btn-danger' %>
                      </td>   -->
  </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
